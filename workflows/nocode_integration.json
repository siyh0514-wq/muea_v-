  "workflow_steps_nocode": [
    {
      "step": "1. 트리거",
      "platform_action": "Watch Files (Google Drive) / New File",
      "configuration": {
        "folder": "YouTube_Shorts_Input",
        "file_types": "image/*"
      }
    },
    {
      "step": "2. 이미지 분석",
      "platform_action": "OpenAI Vision API",
      "configuration": {
        "model": "gpt-4o-mini",
        "prompt": "{{prompts.keyword_analysis}}",
        "image": "{{trigger.file}}"
      }
    },
    {
      "step": "3. 대본 생성",
      "platform_action": "OpenAI Chat Completion",
      "configuration": {
        "model": "gpt-4o-mini",
        "prompt": "{{prompts.script_generation}}",
        "context": "{{step2.keywords}}"
      }
    },
    {
      "step": "4. 썸네일 생성",
      "platform_action": "OpenAI DALL-E",
      "configuration": {
        "model": "dall-e-3",
        "prompt": "{{prompts.thumbnail_design}}",
        "size": "1024x1792"
      }
    },
    {
      "step": "5. 파일 저장",
      "platform_action": "Google Drive / Create Files",
      "configuration": {
        "folder": "YouTube_Shorts_Output",
        "files": [
          "{{step3.script.json}}",
          "{{step4.thumbnail.png}}"
        ]
      }
    },
    {
      "step": "6. 알림 전송",
      "platform_action": "Email / Send",
      "configuration": {
        "to": "your-email@example.com",
        "subject": "숏폼 자동 생성 완료",
        "body": "{{step3.script.title}}"
      }
    }
  ],
